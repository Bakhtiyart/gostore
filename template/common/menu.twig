{% if categories %}
<nav id="menu" class="navbar  navbar-light">
  <button class="navbar-toggler hamburger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"> 
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      {% for category in categories %}
      {% if category.children %}
      <li class="nav-item dropdown">
        <a href="{{ category.href }}" class="nav-link dropdown-toggle" data-toggle="dropdown">
        {{ category.name }}
        </a>
        <div class="dropdown-menu">
          <div class="dropdown-item"> {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
            <ul class="list-unstyled">
              {% for child in children %}
              <li><a href="{{ child.href }}">{{ child.name }}</a></li>
              {% endfor %}
            </ul>
            {% endfor %}</div>
          <a href="{{ category.href }}" class="see-all">{{ text_all }} {{ category.name }}</a> </div>
      </li>
      {% else %}
      <li class="nav-item"><a class="nav-link" href="{{ category.href }}">{{ category.name }}</a></li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
</nav>
{% endif %}